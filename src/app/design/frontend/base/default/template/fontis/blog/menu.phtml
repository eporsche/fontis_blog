<?php $blogHelper = Mage::helper("blog"); ?>
<div class="box base-mini blog">
   <div class="content">
        <?php echo $this->getChildHtml("archives"); ?>
        <?php if ($posts = $this->getRecent()): ?>
            <p class="catTitle"><?php echo $blogHelper->__("Recent Posts"); ?></p>
            <ul>
                <?php foreach ($posts as $post): ?>
                    <li>
                        <a href="<?php echo $post->getAddress(); ?>"><?php echo $post->getTitle(); ?></a>
                    </li>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
        <p class="catTitle"><?php echo $blogHelper->__("Categories"); ?></p>
        <ul>
            <?php $cats = $this->getCategories(); ?>
            <?php foreach ($cats as $cat): ?>
                <?php if ($this->isCatActive($cat)): ?>
                    <li class="active"><?php echo $cat->getTitle(); ?></li>
                <?php else: ?>
                    <li><a href="<?php echo $cat->getAddress(); ?>"><?php echo $cat->getTitle(); ?></a></li>
                <?php endif; ?>
            <?php endforeach; ?>
    	</ul>
	</div>
</div>
